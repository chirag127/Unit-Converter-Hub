# Unit Converter Hub Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# Application Settings
APP_NAME=Unit Converter Hub
APP_VERSION=1.0.0
APP_DESCRIPTION=A comprehensive unit converter application

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Cache Settings
CACHE_TTL=3600
ENABLE_COMPRESSION=true
